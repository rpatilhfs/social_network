<h1>OpenidSession#new</h1>
<p>Find me in app/views/openid_session/new.html.erb</p>

<form accept-charset="UTF-8" action="/openid_session" method="post">
	<div>
	    <label for="session_email">Email</label>
	    <input id="openid_email" name="openid_session[email]" size="30" type="text" />
	</div>
	<div>
		<label for="session_password">Password</label>
		<input id="openid_password" name="openid_session[password]" size="30" type="password" />
	</div>
	<div>OR USE</div>
	
	<div>
		<label for="openid_identifier">OpenID:</label>
      	<%= text_field_tag "openid_identifier" %>
	</div>
	
	<input class="btn btn-large btn-primary" name="commit" type="submit" value="Sign in" />  			
</form>