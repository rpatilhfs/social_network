	      <input id="user_email" name="user[email]" size="30" type="text" value="<%=@user.email %>" readonly='readonly' />
		<p>
			<a class="btn btn-primary btn-large" href="/ManageProfile">Update Profile Â»</a>
		</p>
  </div>
  
  
</div>
