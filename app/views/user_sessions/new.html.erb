<h1>Sign In</h1>

<div class="row">
	
	<div class="span4 offset">
		<div>
			<label for="Sign_In_with">Sign In with</label>
		</div>
		
		<p>
			<div class="outset-colored" style="width: 132%;">
				<ul>
					<li>
						<a href="/auth/facebook" title="My Facebook Page" class="facebook">
							<img src="/assets/sign_in_icon/facebook_white.png" alt="Facebook icon" />
							<span class="site">Facebook</span>
						</a>
					</li>
					<li>
						<a title="My E-Mail" class="email" data-toggle="modal" href="#link_underconstruction">
							<img src="/assets/sign_in_icon/gmail_white.png" alt="gmail icon" />
							<span class="site">E-Mail</span>
						</a>
					</li>
					<li>
						<a data-toggle="modal" href="#link_underconstruction"title="My LinkedIn Page" class="linkedin">
							<img src="/assets/sign_in_icon/linkedin_white.png" alt="LinkedIn icon" />
							<span class="site">LinkedIn</span>
						</a>
					</li>
					<li>
						<a data-toggle="modal" href="#link_underconstruction" title="My Twitter Page" class="twitter">
							<img src="/assets/sign_in_icon/twitter_white.png" alt="Twitter icon" />
							<span class="site">Twitter</span>
						</a>
					</li>
					<li>
						<a data-toggle="modal" href="#link_underconstruction" title="My Flickr Page" class="flickr">
							<img src="/assets/sign_in_icon/flickr_white.png" alt="Flickr icon" />
							<span class="site">Flickr</span>
						</a>
					</li>
				</ul>
			</div>
		</p>
  	</div>


	<div class="span1 offset1">
		<div style="height:400px;width:0px;border:1px solid #252525;"></div>
  	</div>
  		
	
	<div class="span4 offset">
		<form accept-charset="UTF-8" action="/user_sessions" method="post">
			<div>
			    <label for="session_email">Email</label>
			    <input id="session_email" name="users_sessions[email]" size="30" type="text" />
			</div>
			<div>
				<label for="session_password">Password</label>
				<input id="session_password" name="users_sessions[password]" size="30" type="password" />
			</div>
  			<input class="btn btn-large btn-primary" name="commit" type="submit" value="Sign in" />
  			
		</form>
		
		<p>New user? <%= link_to "Sign up now!", '/SignUp' %></p>

  	</div>
</div>


<div class="modal hide fade" id="link_underconstruction" name="link_underconstruction">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">Ã—</button>
		<h3>Unders Construction</h3>
	</div>
	<div class="modal-body">
		<p style="text-align: center;">Respected link is underconstruction</p>
	</div>
	<div class="modal-footer">
		<a href="#" class="btn" data-dismiss="modal">Close</a>
	</div>
</div>

<script>
	$(function() {
		$('#link_underconstruction').modal('show')
	});
</script>