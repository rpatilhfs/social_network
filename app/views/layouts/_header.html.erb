    <div class="container">
      <%= link_to "SOCIAL NETWORK", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if session[:current_user].present? %>
			<li><%= link_to "Dashboard", '/Dashboard' %></li>
          
            <li id="fat-menu" class="dropdown" onmouseover="$('.dropdown-menu').css('display','block');" onmouseout="$('.dropdown-menu').css('display','none');">
